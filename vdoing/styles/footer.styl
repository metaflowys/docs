
.links-container
  --color_theme: #0a72ef;
  background-color: rgb(37, 37, 37);
  padding: 50px 0 38px 0;
  min-width: var(--width-mini);

  .links-list 
    width: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: space-around;
    margin: 0 0 120px 0
    .links-item 
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
      .links-title 
        color: #d7d8d9;
        font-size: 16px;
        line-height: 22px;
        padding-bottom: 10px;
        font-weight: 500;
        font-family: var(--fontfamily_medium);
      > a 
        color: #9b9ea0;
        font-size: 14px;
        line-height: 25px;
        font-family: "PingFangSC-Thin", "PingFang SC Thin", "PingFang SC",
          sans-serif, "PingFangSC-Thin", "PingFang SC Thin", "PingFang SC",
          sans-serif-200;
  .foot-content 
    text-align: center;
    font-size: 14px;
    line-height: 20px;
    // color: #dcdfe6;
    color: #939393;
    margin: 0;
    > a 
      color: inherit;

  a:hover 
    color: var(--color_theme) !important;


